---
title: variicon.netlify.com
---
<div class="js-theme theme-dark">
  <div class="menu-container">
    <section class="menu" id="menuExpand">
      <a href="javascript:void(0)"; class="variicon hamburger" onclick="menuExpand()">A</a>
      <a href="index.html" class="menu__logo">Variicons</a>
      <nav class="menu__links">
        <a href="#"></a>
        <a href="#"></a>
        <a href="index.html" class="menu__item current">CONFIGURATOR</a>
        <a href="about.html" class="menu__item">ABOUT</a>
        <a href="how-to-use.html" class="menu__item">HOW TO USE VARIICONS</a>
        <a href="https://github.com/jaydaman/variableIcons" target="_blank" class="menu__item">GITHUB</a>
      </nav>
    </section>
  </div>

  <section class="top-section">

    <div class="top-section__icon-container">
      <div class="slider-wrapper font-size-slider">
        <span class="font-size-icon">F</span>
        <input type="range" min="1" max="100" value="80" title="Set icon font size" class="slider" id="">
        <span class="font-size-icon">F</span>
      </div>
      <div class="top-section__icon js-icon">
        B
      </div>
      <p id="icon-title">hamburger_1</p>
    </div>

  </section>

  <section class="bottom-section flex-col">

    <div class="bottom-section__container">
      <div class="left-container1 line-item-alt">
        <div class="icon-wrapper">
          <div class="icon-item" data-title="hamburger_1" title="hamburger_1">
            B
          </div>
          <div class="icon-item" data-title="hamburger_2" title="hambruger_2">
            A
          </div>
          <div class="icon-item" data-title="icon_loading" title="icon_loading">
            C
          </div>
          <div class="icon-item" data-title="arrow-left" title="arrow-left">
            D
          </div>
          <div class="icon-item" data-title="asterix" title="asterix">
            E
          </div>
        </div>
      </div>

      <div class="spacing-block"></div>

      <div class="flex-col">
        <div class="mid-container1">
          <div class="btn btn-normal line-item js-state-btn active" id="buttonState1">
            <h4>State 1</h4>
          </div>
          <div class="btn btn-normal line-item js-state-btn" id="buttonState2">
            <h4>State 2</h4>
          </div>
        </div>
        <div class="mid-container2">
          <div class="small-sq icon-active">
            <i class="variicon js-icon-button">B</i>
          </div>
          <div class="small-sq js-loop-button" title="Loop icon">
            <i class="material-icons md-col">loop</i>
          </div>
          <div class="theme-picker">
            <div class="small-sq js-button-expand" title="Change color theme">
              <i class="material-icons md-col">lens</i>
            </div>
          </div>
        </div>
          <div class="theme-picker-sheet">
            <ol class="theme-picker-sheet__colors">
              <li class="theme-picker-sheet__color">
                <button class="js-theme-button theme-picker-sheet__color--background" data-theme="dark"></button>
              </li>
              <li class="theme-picker-sheet__color">
                <button class="js-theme-button theme-picker-sheet__color--background" data-theme="light"></button>
              </li>
              <li class="theme-picker-sheet__color">
                <button class="js-theme-button theme-picker-sheet__color--background" data-theme="yellow"></button>
              </li>
              <li class="theme-picker-sheet__color">
                <button class="js-theme-button theme-picker-sheet__color--background" data-theme="blue"></button>
              </li>
            </ol>
          </div>
      </div>

      <div class="spacing-block"></div>

      <div class="flex-col config-menu">
        <div class="configure-button"></div>

        <div class="right-container1">
          <div class="btn btn-normal line-item js-view-btn view-active" id="js-configure-button">
            <h4>Configure</h4>
          </div>
          <div class="btn btn-normal line-item js-view-btn" id="js-code-button">
            <h4>Get CSS</h4>
          </div>
        </div>
        <div class="configure-bg">

          <div class="right-container2 setting-container-display-flex" id="configure-container">
            <div class="js-properties-wrapper">
              <div class="slider-wrapper">
                <h4>Width</h4>
                <input type="range" min="1" max="100" value="80" title="Set icon 'width' value" class="slider" id="slider-wdth">
                <input type="number" class="input-box" value="80" id="output-wdth">
              </div>
              <div class="slider-wrapper">
                <h4>Weight</h4>
                <input type="range" min="1" max="100" value="30" title="Set icon 'weight' value" class="slider" id="slider-wght">
                <input type="number" class="input-box" value="30" id="output-wght">
              </div>
              <div class="slider-wrapper">
                <h4>Duration</h4>
                <input type="range" min="0" max="1200" value="400" title="Set icon 'transition-duration' value" class="slider" step="10" id="slider-dura">
                <input type="number" class="input-box" min="0" max="1200" value="400" step="10" id="output-dura">
              </div>
            </div>

            <div class="easing">
              <h4 id="desktop-title">Easing</h4>
              <div class="easing__button-container">
                <button type="button" name="button" title="Set transition-timing to 'linear'" class="btn js-easing-button" id="button-linear"><h4>linear</h4></button>
                <button type="button" name="button" title="Set transition-timing to 'ease'" class="btn js-easing-button setting-active" id="button-ease"><h4>ease</h4></button>
                <button type="button" name="button" title="Set transition-timing to 'ease-in'" class="btn js-easing-button" id="button-ease-in"><h4>ease-in</h4></button>
                <button type="button" name="button" title="Set transition-timing to 'ease-out'"class="btn js-easing-button" id="button-ease-out"><h4>ease-out</h4></button>
                <button type="button" name="button" title="Set transition-timing to 'ease-in-out'" class="btn js-easing-button" id="button-ease-in-out"><h4>ease-in-out</h4></button>
                <input type="text" name="input" title="Set cubic-bezier" placeholder="cubic-bezier(n,n,n,n)" class="btn js-easing-button bezier-input" id="cubic-bezier"></input>
              </div>
            </div>
          </div>

          <div class="right-container-code setting-container-display-none" id="code-container">
            <div class="code__wrapper">
              <p id="code-output">.icon-state1 { <br>
                	font-variation-settings: “TIME” 0, “wdth” 30, “wght” 60;<br>
                  transition-property: font-variation-settings;
                  transition-duration: 400ms;<br>
                  transition-timing-function: ease;<br>
                }<br><br>
                  .icon-state2 { <br>
                    font-variation-settings: "TIME" 100, “wdth” 30, “wght” 60;<br>
                  }
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</div>
