            </div>
            <div class="theme-picker__option col-yellow">
            </div>
            <div class="theme-picker__option col-blue">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="spacing-block"></div>

    <div class="flex-col">
      <div class="right-container1">
        <div class="btn btn-normal line-item btnActive">
          <h4>Configure</h4>
        </div>
        <div class="btn btn-normal line-item">
          <h4>Get code</h4>
        </div>
      </div>
      <div class="right-container2">
        <div class="slider-wrapper">
          <h4>Weight</h4>
          <input type="range" min="1" max="100" value="1" class="slider" id="slider-wght">
          <input type="text" class="input-box" id="output-wght">
        </div>
        <div class="slider-wrapper">
          <h4>Width</h4>
          <input type="range" min="1" max="100" value="1" class="slider" id="slider-wght">
          <input type="text" class="input-box" id="output-wght">
        </div>
        <div class="slider-wrapper">
          <h4>Duration</h4>
          <input type="range" min="1" max="100" value="1" class="slider" id="slider-wght">
          <input type="text" class="input-box" id="output-wght">
        </div>
      </div>

      <div class="easing">
        <h4>Easing</h4>
        <div class="easing__button-container">
          <div class="btn btn-thin">
            <h4>linear</h4>
          </div>
          <div class="btn btn-thin">
            <h4>cubic-bezier</h4>
          </div>
        </div>
      </div>
    </div>

  </div>
